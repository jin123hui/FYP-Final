<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/upcoming_notif"
        android:src="@drawable/ic_event_available_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:contentDescription="event"
        />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/notif_no"
        android:layout_width="wrap_content"
        android:minWidth="19sp"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@null"
        android:layout_alignTop="@id/upcoming_notif"
        android:layout_alignRight="@id/upcoming_notif"
        android:paddingBottom="1dp"
        android:background="@drawable/rounded_square"/>
</RelativeLayout>